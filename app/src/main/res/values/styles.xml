<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="background">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:buttonStyle">@style/BtnTheme</item>
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
        <item name="popupMenuStyle">@style/popupTheme</item>
    </style>
    <style name="ActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
    </style>
    <style name="popupTheme" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:buttonStyle">@style/BtnTheme</item>
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
    </style>
    <style name="BtnTheme" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="SpnTheme" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
    </style>
</resources>
